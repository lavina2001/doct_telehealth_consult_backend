<!-- Page Content -->
<div class="content">
	<div class="container">

		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="card-body">
						<div class="booking-doc-info">
							<a href="doctor-profile.html" class="booking-doc-img">
								<img src="img/dp.png" alt="User Image">
							</a>
							<div class="booking-info">
								<h4><a href="doctor-profile.html">Dr. {{doctor.name}}</a></h4>

								<p class="text-muted mb-0"><i class="fas fa-map-marker-alt"></i> {{doctor.city}} ,
									{{user.country}}</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Schedule Widget -->
				<div class="card booking-schedule schedule-widget">

					<!-- Schedule Header -->
					<div class="schedule-header">
						<div class="row">
							<div class="col-md-12">


							</div>
						</div>
					</div>
					<!-- /Schedule Header -->

					<!-- Schedule Content -->
					<div class="schedule-cont">
						<div class="row">
							<div class="col-md-12">
								<form action="/booking" method='POST'>
									<!-- Time Slot -->
									<input type="text" name="userId" class="form-control floating" style="display: none;"
										id="userId" value={{userData._id}}>
									<input type="text" name="doctorId" class="form-control floating" style='display:none;'
										id="doctorId" value={{doctorId}}>


									<div class="form-group form-focus col-md-6">
										Pick Date:<input type="date" name="date" class="form-control floating"
											id="date">

									</div>
									<div class="form-group form-focus col-md-6">
										Pick Time:<input type="time" name="time" class="form-control floating"
											id="time">

									</div>
									<div class="form-group form-focus col-md-6">
										Disease:<textarea name="diceases" class="form-control floating"
											id="diceases"></textarea>



									</div><br>
									<div class="form-group form-focus col-md-6">
										<a class="btn btn-primary submit-btn"" href=" payment/payment.png" download> PAYMENT </a>

</div>
{{!-- <p>each dicisease have saperater ','</p> --}}
									<div class="submit-section proceed-btn text-right">
										<button type='submit' class="btn btn-primary submit-btn" id="proceed">Proceed</button>
									</div>
								</form>
								<!-- /Time Slot -->

							</div>
						</div>
					</div>
					<!-- /Schedule Content -->

				</div>
				<!-- /Schedule Widget -->

				<!-- Submit Section -->
			
				<!-- /Submit Section -->

			</div>
		</div>
	</div>

</div>

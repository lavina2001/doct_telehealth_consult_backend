{{>header}}


<!-- /Header -->

<!-- Page Content -->
<div class="content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-md-8 offset-md-2">

				<!-- Register Content -->
				<div class="account-content">
					<div class="row align-items-center justify-content-center">
						<div class="col-md-7 col-lg-6 login-left">
							<img src="client/img/login-banner.png" class="img-fluid" alt="Doccure Register">
						</div>
						<div class="col-md-12 col-lg-6 login-right">
							<div class="login-header">
								<h3>Register</h3>
							</div>

							<!-- Register Form -->

							<form action="/register" method="post" enctype="multipart/form-data">
								<div class="form-group form-focus">


									<select name="role" class="form-control floating role">
										<option value="" selected disabled></option>
										<option value="0">Patient</option>
										<option value="1">Doctor</option>
										<option value="2">Admin</option>
									</select>
									<label class="focus-label">User type</label>
								</div>

								<div class="form-group form-focus">
									<input type="text" name='name' id='name' class="form-control floating">
									<label class="focus-label">Name</label>
								</div>
								<div class="form-group form-focus">
									<input type="email" name='email' id='email' class="form-control floating">
									<label class="focus-label">Email</label>
								</div>
								<div class="form-group form-focus">
									<input type="city" name='country' id='password' class="form-control floating">
									<label class="focus-label">country</label>
								</div>
								<div class="form-group form-focus">
									<input type="city" name='city' id='password' class="form-control floating">
									<label class="focus-label">city</label>
								</div>
								<div class="form-group form-focus">
									<input type="text" name='mobileNo' id='mobile_number' class="form-control floating">
									<label class="focus-label">Mobile Number</label>
								</div>
								<label class="focus-label">profile</label>
									<input type="file" name='file' id='' class="form-control">

								<div class="form-group form-focus">
									<input type="password" name='password' id='password' class="form-control floating">
									<label class="focus-label">Create Password</label>
								</div>

								<div class="moreDoctor" style="display: none;">
									<div class="form-group form-focus">
										<input type="text" name='qualification' id='password'
											class="form-control floating">
										<label class="focus-label">qualification</label>
									</div>
									<div class="form-group form-focus">
										<select name="speciality" class="form-control floating" id="role">
											<option value="" selected disabled></option>
											{{#each data}}
											<option value={{this._id}}>{{this.title}}</option>
											{{/each}}
										</select>
										<label class="focus-label">speciality</label>
									</div>
									<div class="form-group form-focus">
										<input type="text" name='memberSince' id='password'
											class="form-control floating">
										<label class="focus-label">year of experience</label>
									</div>
									<div class="form-group form-focus">
										<input type="text" name='price' id='price' class="form-control floating">
										<label class="focus-label">price</label>
									</div>

									

								</div>
								<div class="text-right">
									<a class="forgot-link" href="/login">Already have an account?</a>
								</div>
								<button class="btn btn-primary btn-block btn-lg login-btn">Signup</button>
								<div class="login-or">
									<span class="or-line"></span>
									<span class="span-or">or</span>
								</div>
								
							</form>
							<!-- /Register Form -->

						</div>
					</div>
				</div>
				<!-- /Register Content -->

			</div>
		</div>

	</div>

</div>
<!-- /Page Content -->

<script>
	$(document).on('click', '.role', function () {
		if (this.value == 1) {
			$('.moreDoctor').show()
		} else {
			$('.moreDoctor').hide()
		}
	})


</script>
